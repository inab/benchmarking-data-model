{
	"id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas/0.4/Challenge",
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"title": "Challenge concept (ELIXIR-EXCELERATE WP2 Benchmarking schemas)",
	"type": "object",
	"properties": {
		"_id": {
			"title": "The unique id of the challenge. If it is possible, it should be something meaningful, like an URL",
			"type": "string",
			"minLength": 1
		},
		"_schema": {
			"title": "The JSON schema absolute URI. It must match the value of 'id' in the JSON schema",
			"type": "string",
			"format": "uri",
			"enum": [ "https://www.elixir-europe.org/excelerate/WP2/json-schemas/0.4/Challenge" ]
		},
		"name": {
			"title": "Short challenge name",
			"minLength": 1,
			"type": "string"
		},
		"benchmarking_event_id": {
			"title": "The parent benchmarking event",
			"minLength": 1,
			"type": "string",
			"foreign_keys": [
				{
					"schema_id": "BenchmarkingEvent",
					"members": [ "." ]
				}
			]
		},
		"is_automated": {
			"title": "Is this an automated challenge?",
			"type": "boolean"
		},
		"dates": {
			"title": "Relevant dates for this challenge",
			"type": "object",
			"properties": {
				"creation": {
					"title": "Creation date of the challenge",
					"type": "string",
					"format": "date-time"
				},
				"modification": {
					"title": "Last modification date of the challenge",
					"type": "string",
					"format": "date-time"
				},
				"public": {
					"title": "The date when this challenge becomes public",
					"type": "string",
					"format": "date-time"
				},
				"challenge_start": {
					"title": "When starts the challenge?",
					"type": "string",
					"format": "date-time"
				},
				"challenge_stop": {
					"title": "When stops the challenge?",
					"type": "string",
					"format": "date-time"
				}
			},
			"required": ["creation","modification"],
			"dependencies": {
				"challenge_start": ["challenge_stop"],
				"challenge_stop": ["challenge_start"]
			}
		},
		"url": {
			"title": "The link to an specific challenge page",
			"type": "string",
			"format": "uri"
		},
		"dataset_ids": {
			"title": "The datasets which every participant in this event must take into account",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"dataset_id": {
						"title": "The id of a dataset which was used to generate this new dataset",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "Dataset",
								"members": [ "." ]
							}
						],
						"minLength": 1
					},
					"role": {
						"title": "The role of this dataset in the benchmarking event",
						"type": "string",
						"enum": [ "input", "reference", "metrics", "challenge" ]
					}
				},
				"required": [ "dataset_id", "role" ]
			}
		},
		"participants": {
			"title": "The initial participants of this challenge (it shouldn't change after the challenge ends). There will be a test action for each participant",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"test_action_id": {
						"title": "The unique identifier of the test action for this participant",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "TestAction",
								"members": [ "." ]
							}
						],
						"minLength": 1
					},
					"name": {
						"title": "A symbolic name of the participant",
						"type": "string"
					},
					"tool_id": {
						"title": "The id of a participating tool",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "Tool",
								"members": [ "." ]
							}
						],
						"minLength": 1
					},
					"metrics_category_id": {
						"title": "Metrics category id where the participant is going to be evaluated",
						"type": "string"
					},
					"contact_ids": {
						"title": "The contacts of the participants with this tool",
						"type": "array",
						"items": {
							"type": "string",
							"foreign_keys": [
								{
									"schema_id": "Contact",
									"members": [ "." ]
								}
							],
							"minLength": 1
						},
						"minLength": 1
					}
				},
				"required": [ "tool_id", "contact_ids", "metrics_category_id" ]
			}
		},
		"metrics_categories": {
			"title": "The metric(s) (defined as tools) which must be run over all the results provided by the participants",
			"type": "array",
			"minLength": 1,
			"items": {
				"title": "The metrics (and maybe the tool) for this challenge",
				"type": "object",
				"properties": {
					"category_id": {
						"title": "The local metrics category id, composed by 1 or more metrics",
						"type": "string"
					},
					"description": {
						"title": "The optional category description",
						"type": "string"
					},
					"metrics": {
						"title": "The list of metrics in this category",
						"type": "array",
						"minLength": 1,
						"items": {
							"type": "object",
							"properties": {
								"metrics_id": {
									"title": "The metrics id",
									"type": "string",
									"foreign_keys": [
										{
											"schema_id": "Metrics",
											"members": [ "." ]
										}
									]
								},
								"tool_id": {
									"title": "The optional tool id which computes this metric(s)",
									"type": "string",
									"foreign_keys": [
										{
											"schema_id": "Tool",
											"members": [ "." ]
										}
									]
								}
							},
							"required": [ "metrics_id" ]
						}
					}
				},
				"required": [ "category_id", "metrics" ]
			}
		},
		"challenge_contact_ids": {
			"title": "The challenge contact id(s)",
			"type": "array",
			"minLength": 1,
			"items": {
				"type": "string",
				"foreign_keys": [
					{
						"schema_id": "Contact",
						"members": [ "." ]
					}
				],
				"minLength": 1
			}
		},
		"references": {
			"title": "The challenge reference id(s) (if any)",
			"type": "array",
			"items": {
				"type": "string",
				"foreign_keys": [
					{
						"schema_id": "Reference",
						"members": [ "." ]
					}
				],
				"minLength": 1
			}
		}
	},
	"additionalProperties": true,
	"required": ["_id","_schema","name","benchmarking_event_id","is_automated","dates","challenge_contact_ids","dataset_ids","participants","metrics_categories"],
	"primary_key": ["_id"],
	"dependencies": {}
}
