{
	"$id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas/1.0/Contact",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Contact concept (ELIXIR-EXCELERATE WP2 Benchmarking schemas)",
	"type": "object",
	"properties": {
		"_id": {
			"title": "The unique id of the contact. It should be whatever ELIXIR AAI uses as public unique user id (for instance, a URI)",
			"type": "string",
			"minLength": 1
		},
		"_schema": {
			"title": "The JSON schema absolute URI. It must match the value of 'id' in the JSON schema",
			"type": "string",
			"format": "uri",
			"enum": [ "https://www.elixir-europe.org/excelerate/WP2/json-schemas/1.0/Contact" ]
		},
		"_metadata": {
			"$ref": "_shared#/definitions/Metadata"
		},
		"contact_type": {
			"title": "Type of contact: physical person, helpdesk, other",
			"type": "string",
			"enum": [ "person", "helpdesk", "other" ]
		},
		"givenName": {
			"title": "First / given name",
			"type": "string",
			"minLength": 1
		},
		"surname": {
			"title": "Surname(s)",
			"type": "string",
			"minLength": 1
		},
		"email": {
			"title": "The e-mail address(es) of the contact",
			"type": "array",
			"format": "email",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "string",
				"minLength": 1,
				"format": "email"
			}
		},
		"community_id": {
			"title": "The community id where this benchmarking event belongs",
			"type": "string",
			"foreign_keys": [
				{
					"schema_id": "Community",
					"members": [ "." ]
				}
			],
			"minLength": 7
		},
		"roles" : {
			"title": "The roles assigned to this contact",
			"type": "array",
  			"items": {
				"type": "object",
				"properties": {
					"role": {
						"title": "The role assigned to the contact",
						"type": "string",
						"enum":  [ "manager", "contributor", "member" ]
					},
					"community_id": {
						"title": "The community the role is assigned to",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "Community",
								"members": [ "." ]
							}
						],
						"minLength": 7
					},
					"challenge_id": {
 						"title": "The challenge the role is assigned to",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "Challenge",
								"members": [ "." ]
							}
						],
						"minLength": 1
					}
				}
			}
		},
		"notes": {
			"title": "Comments about the contact",
			"type": "string"
		},
		"links": {
			"title": "Optional links related to the contact",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"uri": {
						"title": "The URI of the link related to the contact",
						"type": "string",
						"format": "uri"
					},
					"label": {
						"title": "The type of URI",
						"type": "string",
						"enum": ["LinkedIn","ORCID","MainSite","Twitter","Other"]
					}
				},
				"additionalProperties": false,
				"required": [
					"uri",
					"label"
				]
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"_id",
		"_schema",
		"contact_type",
		"email",
		"community_id"
	],
	"primary_key": ["_id"],
	"dependencies": {}
}
