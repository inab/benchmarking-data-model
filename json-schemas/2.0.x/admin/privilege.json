{
	"$id": "https://w3id.org/openebench/scientific-schemas/2.0/Privilege",
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"title": "Security privileges concept (OpenEBench Benchmarking Data Model schemas)",
	"type": "object",
	"properties": {
		"_id": {
			"title": "The unique id of the contact. It should be a qualified, valid ORCID",
			"type": "string",
			"pattern": "^orcid:0",
			"foreign_keys": [
				{
					"schema_id": "Contact",
					"members": [ "." ]
				}
			],
			"minLength": 1
		},
		"_schema": {
			"title": "The JSON schema absolute URI. It must match the value of 'id' in the JSON schema",
			"type": "string",
			"format": "uri",
			"enum": [ "https://w3id.org/openebench/scientific-schemas/2.0/Privilege" ]
		},
		"roles" : {
			"title": "The roles assigned to this contact",
			"type": "array",
  			"items": {
				"type": "object",
				"oneOf": [
					{
						"properties": {
							"role": {
								"title": "The role assigned to the contact",
								"type": "string",
								"enum":  [ "owner" ]
							},
							"community_id": {
								"title": "The community the role is assigned to",
								"type": "string",
								"foreign_keys": [
									{
										"schema_id": "Community",
										"members": [ "." ]
									}
								],
								"minLength": 7
							}
						}
					},
					{
						"properties": {
							"role": {
								"title": "The role assigned to the contact",
								"type": "string",
								"enum":  [ "manager", "contributor" ]
							},
							"benchmarking_event_id": {
 								"title": "The benchmarking event the role is assigned to",
								"type": "string",
								"foreign_keys": [
									{
										"schema_id": "BenchmarkingEvent",
										"members": [ "." ]
									}
								],
								"minLength": 1
							}
						}
					},
					{
						"properties": {
							"role": {
								"title": "The role assigned to the contact",
								"type": "string",
								"enum":  [ "contributor", "evaluator" ]
							},
							"challenge_id": {
 								"title": "The challenge the role is assigned to",
								"type": "string",
								"foreign_keys": [
									{
										"schema_id": "Challenge",
										"members": [ "." ]
									}
								],
								"minLength": 1
							}
						}
					}

				],
				"additionalProperties": false
			}
		}
	},
	"unevaluatedProperties": false,
	"required": [
		"_id",
		"_schema",
		"roles"
	],
	"primary_key": ["_id"],
	"dependencies": {}
}
